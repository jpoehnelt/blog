{
  "name": "blog",
  "author": "Justin Poehnelt",
  "license": "MIT",
  "scripts": {
    "build:11ty": "NODE_OPTIONS=\"--max-old-space-size=4096\" eleventy --quiet",
    "build:js": "esbuild src/scripts/index.js --outfile=public/assets/index.js --bundle --minify ",
    "build:css": "postcss src/styles/tailwind.css -o public/assets/index.css",
    "build": "cross-env NODE_ENV=production npm-run-all clean build:js build:css build:11ty",
    "clean": "rimraf public/assets public/blog public/code public/feed public/posts public/run public/tag public/*.*",
    "dev:11ty": "eleventy --serve --quiet --incremental",
    "dev:js": "esbuild src/scripts/index.js --outfile=public/assets/index.js --bundle --watch",
    "dev:css": "postcss src/styles/tailwind.css -o public/assets/index.css --watch",
    "dev": "npm-run-all clean build:js build:css build:11ty -p dev:*",
    "prepare": "run-p prepare:*",
    "prepare:refresh": "esbuild automations/strava-refresh.ts --outfile=dist/strava-refresh.mjs --bundle --platform=node --format=esm --external:./node_modules/*",
    "prepare:strava": "esbuild automations/strava-ingest.ts --outfile=dist/strava-ingest.mjs --bundle --platform=node --format=esm --external:./node_modules/*",
    "prepare:mastodon": "esbuild automations/mastodon.ts --outfile=dist/mastodon.mjs --bundle --platform=node --format=esm --external:./node_modules/*",
    "prepare:npm": "esbuild automations/npm.ts --outfile=dist/npm.mjs --bundle --platform=node --format=esm --external:./node_modules/*",
    "prepare:webmentions": "esbuild automations/webmentions.ts --outfile=dist/webmentions.mjs --bundle --platform=node --format=esm --external:./node_modules/*",
    "webmentions": "node dist/webmentions.mjs"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-img": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@aloskutov/eleventy-plugin-external-links": "^1.4.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/dompurify": "^3.0.0",
    "@types/libsodium-wrappers": "^0.7.10",
    "@types/universal-analytics": "^0.4.5",
    "autoprefixer": "^10.4.14",
    "axios": "^1.3.4",
    "clean-css": "^5.3.2",
    "cross-env": "^7.0.3",
    "d3-node": "^3.0.0",
    "d3-scale": "^4.0.2",
    "date-fns": "^2.29.3",
    "dotenv": "^16.1.3",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "eleventy-plugin-related": "^1.0.6",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "esbuild": "^0.17.12",
    "html-minifier": "^4.0.0",
    "libsodium-wrappers": "^0.7.11",
    "lodash": "^4.17.21",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^2.0.2",
    "mkdirp": "^2.1.5",
    "node-html-parser": "^6.1.5",
    "npm-run-all": "^4.1.5",
    "octokit": "^2.0.14",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^2.8.8",
    "related-documents": "^1.0.8",
    "rimraf": "^4.4.0",
    "slugify": "^1.6.5",
    "tailwindcss": "^3.3.2",
    "tweetsodium": "^0.0.4",
    "url": "^0.11.0",
    "workbox-build": "^7.0.0"
  },
  "dependencies": {
    "@11ty/eleventy-fetch": "^4.0.0",
    "@netlify/functions": "^1.4.0",
    "debounce-fn": "^5.1.2",
    "dompurify": "^3.0.1",
    "fast-xml-parser": "^4.1.3",
    "jsdom": "^21.1.1",
    "lazysizes": "^5.3.2",
    "netlify-plugin-cache": "^1.0.3",
    "universal-analytics": "^0.5.3"
  }
}
