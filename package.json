{
  "name": "blog",
  "author": "Justin Poehnelt",
  "license": "MIT",
  "scripts": {
    "build:11ty": "eleventy --quiet",
    "build:js": "esbuild src/scripts/index.js --outfile=public/assets/index.js --bundle --minify ",
    "build:css": "postcss src/styles/tailwind.css -o public/assets/index.css",
    "build": "cross-env NODE_ENV=production npm-run-all clean build:js build:css build:11ty",
    "clean": "rimraf public/assets public/blog public/code public/feed public/posts public/run public/tag public/*.*",
    "dev:11ty": "eleventy --serve --quiet --incremental",
    "dev:js": "esbuild src/scripts/index.js --outfile=public/assets/index.js --bundle --watch",
    "dev:css": "postcss src/styles/tailwind.css -o public/assets/index.css",
    "dev": "npm-run-all clean build:js build:css build:11ty -p dev:*",
    "prepare": "npm run build:esbuild",
    "build:esbuild": "esbuild automations/*.ts --out-extension:.js=.mjs --outdir=dist --entry-names=[name] --bundle --platform=node --format=esm --external:./node_modules/*",
    "webmentions": "node automations/mentions.mjs"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-img": "^2.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@aloskutov/eleventy-plugin-external-links": "^1.4.0",
    "@msgpack/msgpack": "^2.7.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/glob": "^7.2.0",
    "@types/libsodium-wrappers": "^0.7.9",
    "@types/lodash": "^4.14.182",
    "@types/universal-analytics": "^0.4.5",
    "autoprefixer": "^10.4.2",
    "axios": "^0.26.1",
    "clean-css": "^5.2.4",
    "cross-env": "^7.0.3",
    "d3-node": "^2.2.3",
    "d3-scale": "^4.0.2",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.3",
    "dirty-json": "^0.9.2",
    "dotenv": "^16.0.0",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "eleventy-plugin-related": "^1.0.0",
    "eleventy-plugin-time-to-read": "^1.2.0",
    "esbuild": "^0.14.29",
    "glob": "^8.0.1",
    "html-minifier": "^4.0.0",
    "libsodium-wrappers": "^0.7.10",
    "lodash": "^4.17.21",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^2.0.0",
    "mkdirp": "^1.0.4",
    "node-gzip": "^1.1.2",
    "node-html-parser": "^5.3.3",
    "npm-run-all": "^4.1.5",
    "octokit": "^1.7.1",
    "playwright": "^1.21.1",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.5.1",
    "protobufjs": "^6.11.2",
    "related-documents": "^1.0.5",
    "rimraf": "^3.0.2",
    "slugify": "^1.6.5",
    "tailwindcss": "^3.0.23",
    "tweetsodium": "^0.0.4",
    "url": "^0.11.0",
    "workbox-build": "^6.5.2"
  },
  "dependencies": {
    "@netlify/functions": "^1.0.0",
    "debounce-fn": "^5.1.0",
    "netlify-plugin-cache": "^1.0.3",
    "universal-analytics": "^0.5.3"
  }
}
