<div class="h-feed">
	{% for post in posts %}
		{% if not post.data.draft %}
			<article class="h-entry mb-8 border-b pb-8 border-gray-300">
				<a class="p-author h-card hidden" rel="author" href="{{ site.url }}">{{ site.author.name}}</a>
				<h2>
					<a class="block u-url p-name" href="{{ site.url }}{{ post.url | url }}">{{ post.data.title }}</a>
				</h2>

				<p class="excerpt p-summary">{{ post.data.excerpt }}</p>

				{% include 'tag-list.njk' %}

				<time class="dt-published block md:inline md:float-right md:pt-4 pt-2 created-date" datetime="{{ post.data.date }}">
					{{ post.data.date | dateDisplay }}
				</time>
                {% if post.data.updatedDate and (post.data.date|string) !== (post.data.updatedDate|string) %}
                    <time class="dt-updated hidden" datetime="{{ post.data.updatedDate }}">{{ post.data.updatedDate | dateDisplay }}</time>
                {% endif %}
			</article>
		{% endif %}
	{% endfor %}
</div>
