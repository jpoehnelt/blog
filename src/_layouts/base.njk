<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">

    {# Google Schema #}
    <meta itemprop="name" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta itemprop="description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">

    {# Open Graph #}
    <meta name="og:title" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta name="og:description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
    <meta name="og:url" content="{{ site.url }}{{ site.baseUrl }}">
    <meta name="og:site_name" content="{{ site.name }}">
    <meta name="og:locale" content="en_GB">
    <meta name="og:type" content="website">
    {% if layout == 'post' %}
      <meta name="og:image" content="{{ site.url }}/images/social/{{page.fileSlug}}.png">
      <meta property="og:image:width" content="1200"/>
      <meta property="og:image:height" content="683"/>
    {% endif %}

    <meta name="theme-color" content="#111827">
    <meta name="view-transition" content="same-origin" />
    <meta name="generator" content="{{ eleventy.generator }}">
    
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

    <link rel="manifest" href="/manifest.json">

    <title>{% if metaTitle %}{{ metaTitle }}{% else %}{{ title }}{% endif %}{% if metaTitle or title %} | {% endif %}{{ site.name }}</title>

    {% set css %}
      {% include "public/assets/index.css" %}
    {% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
    
    {# https://webmention.io/settings #}
    <link rel="webmention" href="https://webmention.io/justin.poehnelt.com/webmention" />
    <link rel="pingback" href="https://webmention.io/justin.poehnelt.com/xmlrpc" />
    <script async src="{{ site.baseUrl }}assets/index.js"></script>
    <script>
      if ('serviceWorker' in navigator) navigator.serviceWorker.register('/sw.js');
    </script>
  </head>
  <body class="flex flex-col min-h-screen">
    {% include 'top-notice.njk' %}
    {% include 'header.njk' %}
    <main class="container mx-auto max-w-5xl p-8 grow">
      {{ content | safe }}
    </main>
    {% include 'footer.njk' %}
  </body>
</html>
